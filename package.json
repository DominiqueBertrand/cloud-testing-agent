{
  "name": "cloud-testing-agent",
  "version": "1.0.4",
  "description": "",
  "author": "",
  "private": false,
  "license": "MIT",
  "homepage": "https://github.com/DominiqueBertrand/cloud-testing-agent",
  "bugs": {
    "url": "https://github.com/DominiqueBertrand/cloud-testing-agent/issues",
    "email": "dominique.bertrand@gmail.com"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prepare": "husky install",
    "ci": "yarn install --immutable --immutable-cache --check-cache",
    "orm": "npx mikro-orm",
    "cz": "cz",
    "pm2:start": "yarn pm2:production:start",
    "pm2:development:start": "pm2 start ./build/ecosystem.config.js --env development",
    "pm2:production:start": "pm2 start ./build/ecosystem.config.js --env production",
    "pm2:stop": "yarn pm2:production:stop",
    "pm2:development:stop": "pm2 stop ./build/ecosystem.config.js --env development",
    "pm2:production:stop": "pm2 stop ./build/ecosystem.config.js --env production"
  },
  "dependencies": {
    "@mikro-orm/core": "^5.9.7",
    "@mikro-orm/nestjs": "^5.2.3",
    "@mikro-orm/postgresql": "^6.0.0",
    "@mikro-orm/sql-highlighter": "^1.0.1",
    "@mikro-orm/sqlite": "^5.9.7",
    "@nestjs/common": "^10.3.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.3.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.3.0",
    "@nestjs/schedule": "^4.0.0",
    "@nestjs/swagger": "^7.1.17",
    "axios": "^1.6.3",
    "bcrypt": "^5.1.1",
    "class-validator": "^0.14.0",
    "cron-validator": "^1.3.1",
    "luxon": "^3.4.4",
    "newman": "^6.1.0",
    "node-worker-threads-pool": "^1.5.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "piscina": "^4.2.1",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1",
    "sqlite3": "^5.1.7"
  },
  "resolutions": {
    "newman/**/tough-cookie": "4.1.3",
    "newman/**/word-wrap": "1.2.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@mikro-orm/cli": "^5.9.7",
    "@mikro-orm/seeder": "^5.9.7",
    "@nestjs/cli": "^10.2.1",
    "@nestjs/schematics": "^10.0.3",
    "@nestjs/testing": "^10.3.0",
    "@types/async": "^3.2.24",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jest": "29.5.11",
    "@types/newman": "^5.3.6",
    "@types/node": "20.10.6",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.3",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.6.0",
    "commitizen": "^4.3.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "5.1.2",
    "husky": "^8.0.3",
    "jest": "29.7.0",
    "jest-tobetype": "^1.2.3",
    "pm2": "^5.3.0",
    "prettier": "^3.0.3",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.2.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "moduleNameMapper": {
      "@src(.*)$": "<rootDir>/$1"
    },
    "rootDir": "src",
    "modulePaths": [
      "<rootDir>"
    ],
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageReporters": [
      "lcov",
      "json",
      "html"
    ]
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/mikro-orm.config.ts",
      "./dist/mikro-orm.config.js"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "files": [
    "dist"
  ]
}
